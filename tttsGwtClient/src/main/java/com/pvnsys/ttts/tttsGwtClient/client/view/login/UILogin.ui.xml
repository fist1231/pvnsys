<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.gwt-Button {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel width="310px" height="156px" verticalAlignment="ALIGN_TOP" spacing="10" horizontalAlignment="ALIGN_CENTER">
			<g:Label text="" horizontalAlignment="ALIGN_LEFT"  ui:field="errorText" styleName="errorLabel" />
			<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" spacing="5" verticalAlignment="ALIGN_MIDDLE">
				<g:TextBox width="200" height="35" maxLength="30" ui:field="usernameField" />
			</g:HorizontalPanel>
			<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" spacing="5" verticalAlignment="ALIGN_MIDDLE">
				<g:PasswordTextBox width="200" height="35" maxLength="30" ui:field="passwordField"  />
			</g:HorizontalPanel>
			<g:HorizontalPanel spacing="10" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Button ui:field="loginButton" styleName="{style.gwt-Button}" width="80" height="30">Login</g:Button>
				<g:Button ui:field="cancelButton" styleName="{style.gwt-Button}" width="80" height="30">Cancel</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 